@page
@model MeuAppSeguranca.Pages.IndexModel
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <title>Sentinel7 - Testes de Segurança</title>
    <link rel="stylesheet" href="~/site.css" />
</head>
<body>
    <h1>Sentinel7 - Testes de Segurança do Cloudinho</h1>
    <form method="post">
        <fieldset>
            <legend>Teste de Segurança</legend>
            <label for="Target">URL ou IP para testar:</label>
            <input asp-for="Target" placeholder="Digite URL ou IP" />
            <span asp-validation-for="Target" style="color: red;"></span>
            <div>
                <label>Tipo de Teste:</label>
                <select asp-for="TestType">
                    <option value="basic">Básico</option>
                    <option value="medium">Médio</option>
                    <option value="advanced">Avançado</option>
                </select>
            </div>
            <button type="submit">Testar</button>
        </fieldset>
    </form>
    @if (Model.HasResult)
    {
        <div>
            <h3>Resultados</h3>
            <p>Nível de Segurança: <span style="color: @Model.SecurityLevelColor">@Model.SecurityLevel</span></p>
            <p>Nível de Ameaça: @Model.ThreatLevel</p>
            @if (!string.IsNullOrEmpty(Model.BasicResult))
            {
                <p>Teste Básico: @Model.BasicResult</p>
            }
            @if (!string.IsNullOrEmpty(Model.MediumResult))
            {
                <p>Teste Médio: @Model.MediumResult</p>
            }
            @if (!string.IsNullOrEmpty(Model.AdvancedResult))
            {
                <p>Teste Avançado: @Model.AdvancedResult</p>
            }
        </div>
    }
    <script asp-add-nonce>
        @await Html.RenderPartialAsync("_ValidationScriptsPartial")
    </script>
</body>
</html>