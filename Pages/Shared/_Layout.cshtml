@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sentinel7</title>

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="~/favicon.svg" />

    <!-- CSS bÃ¡sico para tema escuro -->
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background-color: #121212;
            color: #f1f1f1;
        }

        header {
            background-color: #1f1f1f;
            padding: 1rem 2rem;
            display: flex;
            align-items: center;
            justify-content: start;
            border-bottom: 1px solid #333;
        }

        header img {
            height: 32px;
            width: 32px;
            margin-right: 12px;
        }

        header h1 {
            font-size: 1.5rem;
            margin: 0;
            color: #facc15;
        }

        main {
            padding: 2rem;
        }

        a {
            color: #facc15;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <img src="~/logo.svg" alt="Sentinel Logo" />
        <h1>Sentinel7</h1>
    </header>

    <main role="main" class="container">
        @RenderBody()
    </main>

    @RenderSection("Scripts", required: false)
</body>
</html>
